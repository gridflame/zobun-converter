{
  "name": "converter",
  "version": "1.0.0",
  "description": "Fast and reliable YouTube to MP3/MP4 converter",
  "author": "zobun",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron": "electron electron/main.js",
    "electron-dev": "cross-env ELECTRON_IS_DEV=true electron electron/main.js",
    "build-electron": "cross-env ELECTRON_BUILD=true next build && electron-builder",
    "dist": "cross-env ELECTRON_BUILD=true next build && electron-builder",
    "dist:win": "cross-env ELECTRON_BUILD=true CSC_IDENTITY_AUTO_DISCOVERY=false npm run build && electron-builder --win",
    "dist:mac": "cross-env ELECTRON_BUILD=true next build && electron-builder --mac",
    "dist:linux": "cross-env ELECTRON_BUILD=true next build && electron-builder --linux",
    "dist:all": "cross-env ELECTRON_BUILD=true next build && electron-builder --win --mac --linux",
    "build:web": "next build",
    "build:desktop": "npm run dist:all",
    "build:all": "node scripts/build.js"
  },
  "dependencies": {
    "@distube/ytdl-core": "^4.14.4",
    "@tailwindcss/postcss": "^4.1.11",
    "autoprefixer": "^10.4.21",
    "axios": "^1.10.0",
    "ffmpeg-static": "^5.2.0",
    "next": "15.3.4",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/eslint-plugin-next": "^15.3.4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "png-to-ico": "^2.1.8",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.zobun.converter",
    "productName": "zobun converter",
    "copyright": "Copyright Â© 2025 zobun",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      ".next-electron/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json",
      "!node_modules/.cache",
      "!node_modules/electron/dist",
      "!node_modules/ffmpeg-static"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public"
      },
      {
        "from": "node_modules/ffmpeg-static",
        "to": "ffmpeg-static",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/zobun.ico",
      "publisherName": "zobun",
      "verifyUpdateCodeSignature": false,
      "signingHashAlgorithms": [],
      "sign": null,
      "certificateFile": null,
      "certificatePassword": null
    },
    "asarUnpack": [
      "**/*.dll"
    ],
    "forceCodeSigning": false,
    "mac": {
      "target": {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "icon": "public/zobun.png",
      "category": "public.app-category.utilities",
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": {
        "target": "AppImage",
        "arch": [
          "x64"
        ]
      },
      "icon": "public/zobun.png",
      "category": "AudioVideo"
    },
    "dmg": {
      "title": "zobun converter",
      "backgroundColor": "#1f2937",
      "window": {
        "width": 600,
        "height": 400
      }
    }
  }
}
